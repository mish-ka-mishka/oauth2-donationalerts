{
    "name": "mkaverin/oauth2-donationalerts",
    "description": "DonationAlerts OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael",
            "email": "m@kaverin.ml"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "donationalerts"
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "league/oauth2-client": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "MKaverin\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MKaverin\\OAuth2\\Client\\Test\\": "test/src/"
        }
    },
    "scripts": {
        "check": "phpcs src test --standard=PSR12 -sp"
    }
}
